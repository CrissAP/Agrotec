<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".metodo_adquisicion">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="397dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="480dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Escoge la manera de adquirir tu producto" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="332dp"
        android:layout_height="341dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="204dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="32dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/envio" />

            <Button
                android:id="@+id/button49"
                android:layout_width="232dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="Envio a domicilio" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="32dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/tienda" />

            <Button
                android:id="@+id/button50"
                android:layout_width="232dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="Recojo en tienda" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="32dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/auto" />

            <Button
                android:id="@+id/button51"
                android:layout_width="232dp"
                android:layout_height="104dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:text="Agrotec al auto" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button52"
        android:layout_width="213dp"
        android:layout_height="56dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="584dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="#36CFB1"
        android:text="Cancelar"
        android:textColor="#FFFDFD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>